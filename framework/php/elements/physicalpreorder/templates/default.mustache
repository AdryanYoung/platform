{{#error_message}}<div class="cash_error cash_{{element_type}}_error">{{error_message}}</div>{{/error_message}}
<span class="cash_physicalpreorder_itemname">{{item_name}}</span>
<span class="cash_physicalpreorder_itemprice">{{currency}}{{item_price}}{{#item_flexible_price}} {{metadata_copy_flexibleprice_suffix}}{{/item_flexible_price}}</span>
<span class="cash_physicalpreorder_itemdescription">{{item_description}}</span>

{{#is_available}}
	<form id="cash_{{element_type}}_form_{{element_id}}" class="cash_form {{element_type}}" method="post" action="">
	<input type="hidden" name="physicalpreorder1" value="go" />
	<input type="hidden" name="user_id" value="{{user_id}}" />
	{{#item_flexible_price}}
		<input type="text" name="total_price" class="cashmusic_narrow" value="{{item_price}}" />
	{{/item_flexible_price}}
	<input type="submit" value="{{^item_flexible_price}}${{item_price}} - {{/item_flexible_price}}{{metadata_copy_buy}}" class="button" /><br />
	</form>
{{/is_available}}

{{^is_available}}
	<span class="cash_physicalpreorder_unavailable">
		Sorry, this item is currently unavailable.
	</span>
{{/is_available}}