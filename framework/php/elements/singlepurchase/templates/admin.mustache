<form method="post" action="{{www_path}}/elements/add/singlepurchase" class="multipart" data-parts="3">
	<input type="hidden" name="{{form_state_action}}" value="makeitso">
	{{#element_id}}<input type="hidden" name="element_id" value="{{element_id}}" />{{/element_id}}
	{{#element_type}}<input type="hidden" name="element_type" value="{{element_type}}" />{{/element_type}}

	<div class="section basic-information" data-section-name="Element name">
		<p class="section-description">
			Give the element a name for your own reference.
		</p>
		<label for="element_name">{{element_label_name}}</label>
		<input type="text" id="element_name" name="element_name" value="{{#element_name}}{{element_name}}{{/element_name}}"{{^element_name}} placeholder="{{element_copy_nameit}}"{{/element_name}} class="required" /> 
	</div>

	<div class="row section part-1" data-section-name="Item and connection">
		<p class="section-description">
			Choose the item you're selling and the payment gateway you'd like to use.
		</p>
		<div class="six columns">
			<label for="item_id">{{element_label_item}}</label>
			<select id="item_id" name="item_id">
				<option value="0">{{element_copy_noitem}}</option>
				{{{options_items_dropdown}}}
			</select>
		</div>
		<div class="six columns">
			<label for="connection_id">{{element_label_connection}}</label>
			<select id="connection_id" name="connection_id">
				<option value="0" selected="selected">{{element_copy_noconnection}}</option>
				{{{options_connections_dropdown}}}
			</select>
		</div>
	</div>

	<div class="row section part-2" data-section-name="Regions">
		<p class="section-description">
			Define shipping regions and associated costs.
		</p>
		<div class="six columns">
			<div class="row">
				<div class="six columns">
					<label for="region1_name">{{element_label_region1}}</label>
					<input type="text" id="region1_name" name="region1_name" value="{{#options_region1_name}}{{options_region1_name}}{{/options_region1_name}}{{^options_region1_name}}{{element_copy_region1_name}}{{/options_region1_name}}" />
				</div>
				<div class="six columns">
					<label for="region1_cost">{{element_label_region_cost}}</label>
					<input type="text" id="region1_cost" name="region1_cost" value="{{#options_region1_cost}}{{options_region1_cost}}{{/options_region1_cost}}{{^options_region1_cost}}{{element_copy_default_cost}}{{/options_region1_cost}}"  class="number" />
				</div>
			</div>
		</div>
		<div class="six columns">
			<div class="row">
				<div class="six columns">
					<label for="region2_name">{{element_label_region2}}</label>
					<input type="text" id="region2_name" name="region2_name" value="{{#options_region2_name}}{{options_region2_name}}{{/options_region2_name}}{{^options_region2_name}}{{element_copy_region2_name}}{{/options_region2_name}}" />
				</div>
				<div class="six columns">
					<label for="region2_cost">{{element_label_region_cost}}</label>
					<input type="text" id="region2_cost" name="region2_cost" value="{{#options_region2_cost}}{{options_region2_cost}}{{/options_region2_cost}}{{^options_region2_cost}}{{element_copy_default_cost}}{{/options_region2_cost}}"  class="number" />
				</div>
			</div>
		</div>
	</div>

	<div class="section part-3 row" data-section-name="Messages">
		<p class="section-description">
			Customize the text shown to a user in different messages.
		</p>
		<div class="twelve columns">
			<label for="message_error">{{element_label_error}}</label>
			<input type="text" id="message_error" name="message_error" value="{{#options_message_error}}{{options_message_error}}{{/options_message_error}}{{^options_message_error}}{{element_copy_error}}{{/options_message_error}}" />

			<label for="message_success">{{element_label_success}}</label>
			<input type="text" id="message_success" name="message_success" value="{{#options_message_success}}{{options_message_success}}{{/options_message_success}}{{^options_message_success}}{{element_copy_success}}{{/options_message_success}}" />
		</div>
	</div>

	<br />
	<input class="button" type="submit" value="{{element_button_text}}" />
</form>