{
	"type":"element",
	"subtype":"singlepurchase",
	"lastupdated":"Jun 13, 2014",
	"version":1,
	"author":"CASH Music",
	"url":"http://cashmusic.org/",
	"license":"AGPL",
	"details":{
		"en":{
			"name":"Single Purchase",
			"description":"A simple single-item Physical order using your Paypal account.",
			"longdescription":"Connect your Paypal account and users will get a single-click purchase flow for any commerce item in the system."
		}
	},
	"copy":{
		"en":{
			"instructions":"For physical goods, define regions and shipping costs.",
			"pagetip":"All messages can be customized in the form."
		}
	},
	"options":{
		"main":{
			"group_label":{
				"en":"Main settings"
			},
			"description":{
				"en":"Instructions or clarifications that should appear with this group."
			},
			"data":{
				"item_id":{
					"label":{
						"en":"Item for sale"
					},
					"type":"select",
					"values":"commerce/items",
					"required":true,
					"displaysize":"small"
				},
				"connection_id":{
					"label":{
						"en":"Commerce connection to use"
					},
					"type":"select",
					"values":"connections/commerce",
					"displaysize":"small"
				}
			}
		},
		"messages":{
			"group_label":{
				"en":"Success/error messages"
			},
			"description":{
				"en":"Instructions or clarifications that should appear with this group."
			},
			"data":{
				"message_success":{
					"label":{
						"en":"Success message"
					},
					"type":"text",
					"default":{
						"en":"Thank you! Here's your download. Mobile users check your inbox and spam folders for a download link."
					},
					"displaysize":"medium"
				},
				"message_error":{
					"label":{
						"en":"Invalid email message"
					},
					"type":"text",
					"default":{
						"en":"There was an error processing your payment. Please reload and try again."
					},
					"displaysize":"medium"
				}
			}
		},
		"shipping":{
			"group_label":{
				"en":"Shipping regions"
			},
			"description":{
				"en":"Instructions or clarifications that should appear with this group."
			},
			"data":{
				"region1_name":{
					"label":{
						"en":"Region 1"
					},
					"type":"text",
					"default":{
						"en":"US"
					},
					"displaysize":"small"
				},
				"region1_cost":{
					"label":{
						"en":"R1 Shipping cost"
					},
					"type":"number",
					"default":"0.00",
					"displaysize":"small"
				},
				"region2_name":{
					"label":{
						"en":"Region 2"
					},
					"type":"text",
					"default":{
						"en":"International"
					},
					"displaysize":"small"
				},
				"region2_cost":{
					"label":{
						"en":"R2 Shipping cost"
					},
					"type":"number",
					"default":"0.00",
					"displaysize":"small"
				}
			}
		}
	}
}