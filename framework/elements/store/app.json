{
	"type":"element",
	"subtype":"store",
	"lastupdated":"Jun 13, 2015",
	"version":1,
	"author":"CASH Music",
	"url":"http://cashmusic.org/",
	"license":"AGPL",
	"details":{
		"en":{
			"name":"Store",
			"description":"A store element.",
			"longdescription":"You know what a store is.",
			"instructions":"...."
		}
	},
	"copy":{
		"en":{
			"cart":"Add to cart",
			"flexibleprice_suffix":"or more",
			"choose_variants":"Choose an option first",
			"choose_verb":"Choose",
			"added":"Added to cart!",
			"unavailable":"Sorry, this item is currently unavailable.",
			"emptycart":"Your cart is empty.",
			"subtotal":"Subtotal",
			"total":"Total",
			"shipping":"Shipping",
			"shippingto":"Shipping to",
			"qty":"QTY",
			"checkout":"Begin checkout",
			"check_email":"Check your email for a receipt and secure link back to this page."
		}
	},
	"options":{
		"main":{
			"group_label":{
				"en":"Main settings"
			},
			"description":{
				"en":"Choose an inventory item to sell and commerce connection to use."
			},
			"data":{
				"featured_items":{
					"label":{
						"en":"Featured items"
					},
					"type":"scalar",
					"displaysize":"large",
					"actiontext": {
						"en":"Add a new featured item"
					},
					"values":{
						"item_id":{
							"label":{
								"en":"Selected item"
							},
							"type":"select",
							"values":"commerce/items",
							"required":false,
							"displaysize":"small"
						}
					},
					"required":false
				},
				"connection_id":{
					"label":{
						"en":"Commerce connection to use"
					},
					"type":"select",
					"values":"connections/commerce",
					"required":true,
					"displaysize":"small"
				}
			}
		},
		"messages":{
			"group_label":{
				"en":"Success/error messages"
			},
			"description":{
				"en":"Customize messages shown to people using this element."
			},
			"data":{
				"message_success":{
					"label":{
						"en":"Success message"
					},
					"type":"text",
					"default":{
						"en":"Thank you! Here's your download. Mobile users check your inbox and spam folders for a download link."
					},
					"displaysize":"medium"
				},
				"message_error":{
					"label":{
						"en":"Invalid email message"
					},
					"type":"text",
					"default":{
						"en":"There was an error processing your payment. Please reload and try again."
					},
					"displaysize":"medium"
				}
			}
		},
		"shipping":{
			"group_label":{
				"en":"Shipping regions"
			},
			"description":{
				"en":"Define shipping regions and costs if you're selling a physical inventory item."
			},
			"data":{
				"region1_name":{
					"label":{
						"en":"Region 1"
					},
					"type":"text",
					"default":{
						"en":"US"
					},
					"displaysize":"small"
				},
				"region1_cost":{
					"label":{
						"en":"R1 Shipping cost"
					},
					"type":"number",
					"default":"0.00",
					"displaysize":"small"
				},
				"region2_name":{
					"label":{
						"en":"Region 2"
					},
					"type":"text",
					"default":{
						"en":"International"
					},
					"displaysize":"small"
				},
				"region2_cost":{
					"label":{
						"en":"R2 Shipping cost"
					},
					"type":"number",
					"default":"0.00",
					"displaysize":"small"
				}
			}
		}
	}
}
