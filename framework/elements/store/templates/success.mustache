{{#error_message}}<div class="cm-error">{{error_message}}</div>{{/error_message}}

<div class="cm-store cm-success">
<div class="cm-store cm-receipt {{#fulfillment_assets}}cm-w-grat{{/fulfillment_assets}}">
<div class="cm-inner">
<ul class="cm-items">
<h2>Order Summary</h2>
	{{#item}}
	<li class="cm-item">
		<h3 class="cm-title">{{name}}</h3>
		{{#variant_name}}<p class="cm-variant">{{variant_name}}</p>{{/variant_name}}
		<div class="cm-info">
			<p class="cm-qty">QTY <span>{{currency}}{{item-current-qty}}</span></p>
			<p class="cm-shipping">Price <span>{{currency}}{{item_amount}}</span></p>
		</div><!--cm-info-->
	</li><!--cm-item-->
	{{/item}}
</ul><!--cm-items-->
<div class="cm-pricing">
		{{#has_physical}}
		<h3 class="cm-subtotal">{{copy_subtotal}}<span class="cm-amount">{{currency}}<span class="cm-subtotal-amount">{{subtotal}}</span></span></h3>
		<h3 class="cm-shipping">{{copy_shipping}}<span class="cm-amount">{{currency}}<span class="cm-shipping-amount">{{shipping}}</span></span></h3>
		{{/has_physical}}
		<h2 class="cm-total">{{copy_total}}<span class="cm-amount">{{currency}}<span class="cm-total-amount">{{total}}</span></h2>
</div><!--cm-pricing-->
<div class="cm-payment-success">Paid in full</div>
</div><!--cm-inner-->
</div><!--cm-receipt-->

{{#fulfillment_assets}}
<div class="cm-store cm-instant-grat">
<h2>Your Downloads</h2>
	<p class="cm-dwld-instructions">{{check_email_dwnld}}</p>
	<ul class="cm-dwld-items">
		<li class="cm-dwld-item">
			<h3 class="cm-title">{{name}}</h3>
			{{#variant_name}}<p class="cm-variant">{{variant_name}}</p>{{/variant_name}}
			{{#asset}}<a href="/" class="cm-download">{{asset_title}}</a><!--cm-dowload-->{{/asset}}
		</li>

	</ul>
</div><!--cm-instant-grat-->
{{/fulfillment_assets}}

</div><!--cm-success-->

<script type="text/javascript">
(function() {
	var hasPushstate = !!(window.history && history.pushState);
	if (hasPushstate) {
		history.pushState(null, null, location.protocol + '//' + location.host + location.pathname);
	}
})();
</script>
