<li class="cm-twitter cm-tweet">
	{{#user}}
	<a href="https://twitter.com/{{#user}}{{screen_name}}{{/user}}" class="cm-avatar-link" target="_blank"><img class="cm-avatar" src="{{profile_image_url_https_bigger}}" alt="Avatar"/></a>
	<p class="cm-name">{{name}} <a class="cm-name-link" href="https://twitter.com/{{#user}}{{screen_name}}{{/user}}" target="_blank"><span class="cm-username {{#user}}{{screen_name}}{{/user}}">@{{screen_name}}</span></a></p>
	{{/user}}
	<a href="https://twitter.com/{{#user}}{{screen_name}}{{/user}}/status/{{id}}" target="_blank" class="cm-date">{{formatted_created_at}} <span class="cm-platform">Twitter</span></a>
	<div class="cm-content">
		<p>
			{{{text}}}
		</p>
	</div>
	{{#photos}}
		<a href="{{expanded_url}}" target="_blank"><img src="{{media_url_https}}" alt="{{display_url}}" /></a>
	{{/photos}}
	{{#iframes}}
		<div class="cm-aspect">
			<iframe src="{{iframe_url}}" frameborder="0" allowfullscreen></iframe>
		</div>
	{{/iframes}}
</li>
