{{! ****************************************************************************
{{
{{  SPECIAL FIRST USE SECTION WITH CONNECTION OPTIONS
{{
{{  ************************************************************************* }}
<div class="pure-u-1">
{{^user_jobs}}
    <div class="alt callout usecolor4"><div class="callout-inner">
    	<div class="pure-u-1 pure-u-md-1-2">
    		<h3 class="firstuse-title">{{{copy_firstuse}}}</h3>
    	</div>
    	<div class="pure-u-1 pure-u-md-1-2">
    		<div class="browser-header"><span></span><span></span><span></span></div><!--brower-header-->
    		<img src="{{www_path}}/assets/images/firstuse/commerce_screen.jpg" alt="screenshot" />
    	</div>
    </div><!--callout-inner-->
    </div><!--callout-->
{{/user_jobs}}    
{{^mass_connection}}
    <div class="callout">
        {{#all_services}}
            <div class="pure-u-1 pure-u-md-1-2">
                <div class="callout-inner">
                    {{#service_has_image}}<h3><a href="{{link}}" target="_blank"><img src="{{www_path}}/assets/images/settings/{{key}}.png" alt="{{name}}"/></a></h3>{{/service_has_image}}
                    <p>{{description}}</p>
                    <p><a href="{{link}}" target="_blank">{{link}}</a></p>
                    <a class="button fullwidth lightboxed" href="{{www_path}}/settings/connections/add/{{key}}">Add Connection</a>
                </div><!--callout-inner-->
            </div><!--pure-->
        {{/all_services}}
    </div><!--pure-->
{{/mass_connection}}

{{#mass_connection}}
    <h4>Fulfillment Jobs</h4>
    <div class="commerce fulfillment-jobs pure-u-1">
        
        {{^user_jobs}}
        <div class="empty">There are currently 0 jobs. Add one to get started.</div>   
        {{/user_jobs}}

        {{#user_jobs}}
      
        <div class="material alternating job">

         <div class="pure-u-1 pure-u-md-1-3">
          <p><a href="/admin/commerce/externalfulfillment/detail/{{id}}">Job: {{name}}</a><br/>
          <span>{{description}}</span></p>
          </div><!--pure-->
          <div class="pure-u-1 pure-u-md-1-3">
          N<sup>o</sup> of Tiers: <span>{{tiers_count}}</span><br />
          Attached file: <span>{{asset_id}} {{asset_options}}</span></p>
          </div><!--pure-->
          <div class="pure-u-1 pure-u-md-1-3">
          <div class="loader-circular">
            <div class="loader-progress"></div><!--loader-progress-->
            <div class="loader-mask">
              <div class="loader-number">50%<span>Reclaimed</span></div><!--loader-number-->
            </div><!--circular-mask-->
          </div><!--loader-circular-->
         </div><!--pure-->
      
        
        <hr />
      
      <a href="/admin/commerce/items/send/{{id}}" class="button lightboxed">Process job</a>
      <a href="/admin/commerce/externalfulfillment/detail/{{id}}" class="button">Edit</a>
      
      Status: {{status}}
      
      </div><!--job-->
      
        {{/user_jobs}}

        <a class="button lightboxed" href="{{www_path}}/commerce/externalfulfillment/create">Create a fulfillment job</a>
        
    </div><!--fulfillment-jobs-->
{{/mass_connection}}
</div><!--pure-->
