<form accept-charset="UTF-8" method="post" action="" id="add-release-form">
	<fieldset class="pure-u-1">
		<input type="hidden" name="doassetedit" value="makeitso" />
		<input type="hidden" name="asset_type" value="release" />
		<h4>Release Details</h4>
			<div class="pure-u-1 pure-u-md-1-3">
				<!--<style type="text/css">
					.release-cover a {{{#cover_asset_id}}color:#fff;{{/cover_asset_id}}}
				</style>-->

				<div class="release-cover " style="background-image:url({{cover_url}});">
					<div class="release-cover-options">
						{{#cover_asset_id}}
							<a href="{{www_path}}/assets/edit/{{cover_asset_id}}" class="smalltext"><span class="editcover"><svg class="icon" viewBox="0 0 248 215"><use xlink:href="#icon-camera"></use></svg><strong>Add/edit cover</strong></span></a>
						{{/cover_asset_id}}
						{{^cover_asset_id}}
							<a href="{{www_path}}/assets/add/file/setparent/{{id}}/setmetadata/cover" class="lightboxed returntocurrentroute smalltext"><span class="editcover"><svg class="icon" viewBox="0 0 248 215"><use xlink:href="#icon-camera"></use></svg><strong>Add/edit cover</strong></span></a>
						{{/cover_asset_id}}
					</div><!--release-cover-options-->
				</div><!--release-cover-->

				<input type="hidden" id="metadata_cover" name="metadata_cover" value="{{cover_asset_id}}" />
				<!--div class="track-list">
					<h5>Track List</h5>
					<ol class="alternating">
						<li>Track Title</li>
