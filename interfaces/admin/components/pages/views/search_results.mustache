	{{#query}}
		<h4>Searching for &ldquo;{{query}}&rdquo;</h4>
	{{/query}}
	{{^query}}
		<h4>No search found. Please try again.</h4>
	{{/query}}
</header>

<div class="search pure-u-1">
	{{#results}}
	<ul class="results">
	
		{{#results}}
