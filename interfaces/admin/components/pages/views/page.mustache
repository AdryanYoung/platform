{{! corresponding files: yourpage.php & yourpage.json }}

<!-- /* Sub Nav */ -->
<header class="page-header">
<div class="pure-u-1 pure-u-md-1-2">
	<h4 class="page-title">Your page <span class="fadedtext">({{#show_published}}Live{{/show_published}}{{^show_published}}Unpublished{{/show_published}})</span></h4>
</div><!--pure-->

<div class="pure-u-1 pure-u-md-1-2">
<ul class="inline-subnav">
	<li><a href="{{www_path}}/">Activity</a></li>
	<li><a href="{{www_path}}/embeds/">Embeds</a></li>
		<li><a class="current" href="{{www_path}}/page/">{{user_page_display_uri}}</a></li>
</ul>
</div><!--pure-->
</header>

<style type="text/css">
	iframe.preview {filter: grayscale(100%) contrast(60%);-webkit-filter: grayscale(100%) contrast(60%);-moz-filter: grayscale(100%) contrast(60%);-ms-filter: grayscale(100%) contrast(60%);}
</style>

<div class="pure-u-1 pure-u-md-1-2">
{{#show_published}}<a href="{{user_page_uri}}" target="_blank">{{/show_published}}{{#first_time_page}}<a href="{{www_path}}/page/theme/" class="firsttime lightboxed">{{/first_time_page}}<div class="preview-header"><span></span><span></span><span></span></div><!--preview-header-->
<div class="preview-wrap">{{^first_time_page}}<iframe id="preview" {{#show_preview}}class="preview" {{/show_preview}}src="http://{{user_page_display_uri}}?{{#show_preview}}preview=1&amp;key={{api_key}}&amp;{{/show_preview}}donottrack=1"></iframe>{{/first_time_page}}</div><!--preview-wrap--></a>
</div><!--pure-->
<div class="pure-u-1 pure-u-md-1-2">
	<h4 class="fadedtext">{{#show_published}}{{copy_public_page}}{{/show_published}}{{^show_published}}{{copy_public_not_live}}{{/show_published}}</h4><a class="url-link" href="{{user_page_uri}}" target="_blank"><big>{{user_page_display_uri}}</big></a><br /><a id="settings" class="settings toggle"><small>[ change username ]</small></a>
	{{^first_time_page}}
		{{#show_published}}<br /><br /><button href="{{www_path}}/page/unpublish" class="needsconfirmation button unpublish">Unpublish</button>{{/show_published}}
		{{^show_published}}<br /><br /><button href="{{www_path}}/page/publish" class="needsconfirmation button publish">Publish</button>{{/show_published}}

		<br />
		{{#show_preview}}<br /><a href="http://{{user_page_display_uri}}?preview=1&amp;key={{api_key}}&amp;donottrack=1" class="button" target="_blank">{{copy_preview}}</a>{{/show_preview}}
		{{#show_edit_button}}<br /><a href="{{www_path}}/elements/templates/edit/{{primary_template_id}}/page" class="lightboxed button page-editor">{{copy_page_edit}}</a>{{/show_edit_button}}
	{{/first_time_page}}

	{{#first_time_page}}
		<br /><br />
		<p>{{copy_first_time}}</p>
		<br /><br />
		<a href="{{www_path}}/page/theme/" class="button lightboxed">{{copy_page_theme}}</a>
	{{/first_time_page}}
</div><!--pure-->

<script type="text/javascript">
	setTimeout(function() {
		if ((''+window.location).substr(-7) == 'publish') {
			history.pushState(1, null, '{{www_path}}/page/');
		}
	}, 200);
</script>
