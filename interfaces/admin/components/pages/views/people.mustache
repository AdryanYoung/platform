

{{#dashboard_list_total_new}}
	<div class="sectiondash">
		<div class="primarystat">
			{{dashboard_list_total_new}}<label>New Subscriber{{^people_singular}}s{{/people_singular}}<br /><br /></label>
		</div>
		<div class="details">
			<ul>
			{{#dashboard_lists}}
				<li><strong><i class="icon icon-list-ul"></i>{{name}}:</strong> <b>{{total}}</b> new {{#singular}}person{{/singular}}{{^singular}}people{{/singular}}.</li> 
				<li class="actions"><span class="action"><a href="{{www_path}}/people/lists/view/{{list_id}}"><i class="icon icon-search"></i>View</a><a href="{{www_path}}/people/lists/export/{{list_id}}" class="noajax"><i class="icon icon-download-alt"></i>Export</a></span></li>
			{{/dashboard_lists}}
			</ul>
		</div>
	</div>
{{/dashboard_list_total_new}}

<div class="row">
	<div class="six columns">
		<h4>Lists</h4>
		{{#lists_all}}
		<ul class="alternating">
			{{#lists_all}}
			<li>
				<a class="primary" href="{{www_path}}/people/lists/view/{{id}}">
				<strong>{{name}}</strong>{{#description}}<span class="descriptive spaced fadedtext">{{description}}</span>{{/description}}</a>
				<div class="more"><div class="toggle"></div><!--toggle-->
					<div class="actions">
						<a href="{{www_path}}/people/lists/view/{{id}}" class="mininav_flush"><i class="icon icon-search"></i>View</a>
						<a href="{{www_path}}/people/lists/edit/{{id}}" class="mininav_flush"><i class="icon icon-pencil"></i>Edit</a>
						<a href="{{www_path}}/people/lists/export/{{id}}" class="mininav_flush noajax"><i class="icon icon-download-alt"></i>Export</a>
					</div><!--actions-->
				</div><!--more-->
			</li>

			{{/lists_all}}
		</ul>
		{{/lists_all}}

		{{^lists_all}}
		<p>No lists have been created.</p>
		{{/lists_all}}
	</div>
	<div class="six columns">
		<h4>Add new press coverage</h4>
		<form accept-charset="UTF-8" method="post" action="{{www_path}}/people/press">
			<label for="press_url">URL</label>
			<input type="text" id="press_url" name="press_url" /> 

			<label for="publishing_date">Publishing date</label>
			<input type="text" id="publishing_date" name="publishing_date" value="{{current_date}}" /> 

			<!--
			<br />
			<label>Tags</label>
			{{{tag_markup}}}
			<a href="#" class="injectbefore" rev="<input type='text' name='tag' value='' placeholder='Tag' />" rel="{{tag_counter}}"><small>+ ADD TAG</small></a>
			-->

			<br />
			<button type="submit"><i class="icon icon-plus-sign"></i>Add new link</button>
		
		</form>
	</div>
</div>