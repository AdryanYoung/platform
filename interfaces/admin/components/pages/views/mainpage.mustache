<!--/* Campaigns */-->
<div id="campaigns" class="{{#dashboard_active}}notifications{{/dashboard_active}}">
{{#has_campaigns}}
<div class="pure-u-1">
	<div class="selecta">
		<form accept-charset="UTF-8" method="post" action="{{www_path}}/">
			<label for="current-campaign">Selected Campaign:</label>
			<select name="current-campaign" id="current-campaign">
			{{{campaigns_as_options}}}
			</select>
		</form>
	</div><!--selecta-->
</div><!--pure-->	
{{/has_campaigns}}

{{#selected_campaign}}
<div class="campaign pure-u-1  pure-u-md-2-3">

		<canvas id="cnvs" data-seed="{{creation_date}}" width="2000" height="398"></canvas>
		<div class="campaign-inner">
		<h2>{{title}}</h2>
		<h3>{{description}}</h3>
			<div class="stats">
				<h4>Total Campaign Views</h4>
				<h5 class="totalviews">{{formatted_views}}</h5>
				<!--h5 class="percentage"><div class="icon icon-lg-arw"></div>&#37;</h5-->
			</div><!--stats-->
			<div class="actions">
				<div class="toggle"><div class="icon icon-pencil"></div><!--icon--></div><!--toggle-->
				<div class="action-inner">
					{{^show_wizard}}
					<a href="{{www_path}}/elements/templates/edit/{{template_id}}/page/parent/{{id}}" class="lightboxed page-editor">Page theme</a>
					{{/show_wizard}}
					{{#show_wizard}}
					<a href="{{www_path}}/campaigns/theme/{{id}}" class="lightboxed">Page theme</a>
					{{/show_wizard}}
					<a href="{{www_path}}/campaigns/edit/{{id}}" class="lightboxed">Edit</a>
					<a href="{{www_path}}/campaigns/delete/{{id}}" class="needsconfirmation delete">Delete</a>
				</div><!--action-inner-->
			</div><!--actions-->
		
		</div><!--campaign-inner-->
		<footer><!--p>Created <span>&#124;</span> {{formatted_date}}</p--><p>Updated <span>&#124;</span> {{formatted_date}}</p></footer>
</div><!--campaign pure-->
<div class="associated pure-u-1 pure-u-md-1-3">
	<h4><span {{^has_elements}}class="zero"{{/has_elements}}>{{element_count}}</span>Associated Elements</h4>
	<a class="add lightboxed store" href="{{www_path}}/elements/add/"><i class="icon icon-circle-plus"></i> Add</a>

	<div class="elements">
		{{#elements_for_campaign}}
		<ul class="alternating">
			{{#elements_for_campaign}}
			<li>
			<a class="primary" href="{{www_path}}/elements/edit/{{id}}">
			<span class="element-title">{{name}}</span>
			<span class="descriptive spaced fadedtext">{{type}}</span></a>
			<a class="ql copy" title="Copy quick embed code" data-clipboard-text="&lt;script type=&quot;text/javascript&quot; src=&quot;{{public_url}}/cashmusic.js&quot;&gt;&lt;/script&gt;&lt;script type=&quot;text/javascript&quot;&gt; window.cashmusic.embed('{{public_url}}','{{id}}');&lt;/script&gt;" ><div class="icon icon-share"></div><!--icon--></a>
				<div class="more"><div class="toggle"></div><!--toggle-->
					<div class="actions">
						<div class="action-inner">
							<a href="{{www_path}}/elements/edit/{{id}}" class="mininav_flush"><div class="icon icon-pencil"></div><!--icon-->Edit</a>
							<a href="{{www_path}}/elements/delete/{{id}}" class="mininav_flush needsconfirmation delete"><div class="icon icon-ban"></div><!--icon--> Delete</a>
						</div><!--action-inner-->
					</div><!--actions-->
				</div><!--more-->
			</li>
			{{/elements_for_campaign}}
		</ul>
		{{/elements_for_campaign}}
		{{^isarchive}}
			{{^elements_for_campaign}}
			<a href="{{www_path}}/elements/add/" class="noelement store lightboxed">
			<div class="icon icon-plus"></div><!--icon-->
				<p><span>Add</span> an element to start</p>
			</a><!--noelement-->
			{{/elements_for_campaign}}
		{{/isarchive}}
	</div><!--elements-->		
</div><!--associated-->
{{/selected_campaign}}

