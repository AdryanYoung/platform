					<span class="attachement"><svg class="icon" viewBox="0 0 219 239"><use xlink:href="#icon-paperclip"></use></svg></span>
				</header>
			</div><!--front-->
				<a href="{{www_path}}/assets/edit/{{id}}" class="back">
					<h2>{{title}}</h2>
					<h3>{{artist_name}}</h3>
					<span class="smalltext release-details">{{{descriptor_string}}}</span>
				</a><!--back-->
			</div><!--card-->
		</div><!--featured-release-->
	</div><!--pure-->
