{{#featured_releases}}
	<div class="pure-u-1 pure-u-md-1-3">
		<div class="featured-release">
		<div id="card">
			<div class="front" style="background-image:url({{cover_url}});"></div><!--front-->
				<a href="{{www_path}}/assets/edit/{{id}}" class="back">
					<h2>{{title}}</h2>
					<h3>Artist Name</h3>
					<span class="smalltext release-details">{{{descriptor_string}}}</span>
				</a><!--back-->
			</div><!--card-->
		</div><!--featured-release-->
	</div><!--pure-->
{{/featured_releases}}
{{#two_features}}
	<div class="pure-u-1 pure-u-md-1-2"></div><!--pure-->
{{/two_features}}

<div id="releases" class="drawer pure-u-1">
	{{#remaining_releases}}
	<div class="drawercontent pure-u-1">
		{{#remaining_releases}}
		<div class="pure-u-1 pure-u-md-1-4">
			<!--<a href="{{www_path}}/assets/edit/{{id}}">
			{{#cover_url}}<img src="{{cover_url}}" class="smallcover" alt="" />{{/cover_url}}
			<span{{^cover_url}} style="padding-left:0;"{{/cover_url}}>{{title}}</span></a>
			<span{{^cover_url}} style="padding-left:0;"{{/cover_url}} class="smalltext fadedtext">{{{descriptor_string}}}</span>-->
			<div class="featured-release">
				<div id="card">
					<a href="{{www_path}}/assets/edit/{{id}}">
						<div class="front" style="background-image:url({{cover_url}});"></div><!--front-->
						<div class="back">
							<h2>{{title}}</h2>
							<h3>Artist Name</h3>
						<span class="smalltext release-details">{{{descriptor_string}}}</span>
						</div><!--back-->
					</a><!--link-->
				</div><!--card-->
			</div><!--featured-release-->
		</div><!--pure-->
		{{/remaining_releases}}
		{{#one_remaining}}
			<div class="pure-u-1 pure-u-md-1-4"></div>
			<div class="pure-u-1 pure-u-md-1-4"></div>
		{{/one_remaining}}
		{{#two_remaining}}
			<div class="pure-u-1 pure-u-md-1-4"></div>
		{{/two_remaining}}
	</div><!--drawercontent-->
	{{/remaining_releases}}

		{{#more_releases}}
		<div class="itemnav">
			<a class="drawerhandle mininav_flush usecolor2">releases</a>
		</div><!--itemnav-->
		{{/more_releases}}
		<a href="{{www_path}}/assets/add/release" class="button lightboxed">Add a new release</a>
</div><!--releases-->

<div class="pure-u-1 pure-u-md-1-2">
	<h4>Files</h4>
		<p>Files are listed to the right. Coming soon: use tags to narrow this list.</p>
</div><!--pure-->

<div class="display-files pure-u-1 pure-u-md-1-2">
		{{#featured_files}}
			<a class="files" href="{{www_path}}/assets/edit/{{id}}"><svg class="icon" viewBox="0 0 240 280"><use xlink:href="#icon-file"></use></svg>{{title}} <span class="descriptive fadedtext file-description">({{descriptor_string}})</span></a>
		{{/featured_files}}
		<div class="drawer">
			{{#more_files}}
			<div class="drawercontent">
				{{#remaining_files}}
					<a class="files" href="{{www_path}}/assets/edit/{{id}}"><svg class="icon" viewBox="0 0 240 280"><use xlink:href="#icon-file"></use></svg>{{title}}</a>
					<span class="descriptive fadedtext file-description">({{descriptor_string}})</span>
				{{/remaining_files}}
			</div><!--drawercontent-->
			{{/more_files}}
				{{#more_files}}<a class="drawerhandle mininav_flush usecolor2">files</a>{{/more_files}}
		</div><!--drawer-->
		<a href="{{www_path}}/assets/add/file" class="button lightboxed"> Add a new file</a>
	</div><!--pure-->

