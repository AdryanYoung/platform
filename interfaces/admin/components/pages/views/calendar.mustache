{{! corresponding files: calendar.php & calendar.json}}
<header class="page-header">
		<h4 class="page-title">{{copy_calendar_title}}</h4>
		<h5 class="page-subtitle">{{{copy_calendar_subtitle}}}</h5>
		</header>


{{#no_events}}
		<div class="alt callout usecolor5"><div class="callout-inner">
			<div class="pure-u-1 pure-u-md-1-2">
				<h3 class="firstuse-title">{{{copy_firstuse}}}</h3>
			</div>
			<div class="pure-u-1 pure-u-md-1-2">
				<div class="browser-header"><span></span><span></span><span></span></div><!--brower-header-->
				<img src="{{www_path}}/assets/images/firstuse/calendar_screen.jpg" alt="screenshot" />
			</div>
		</div><!--callout-inner-->
		</div><!--callout-->
		<br /><br />
{{/no_events}}

{{#events_thisweek}}
 	<div class="pure-u-1">
 		<header>
		<h4>{{copy_this_week}}</h4>
		</header>
		<ul class="alternating">
			{{#events_thisweek}}
			<li>
				<a class="primary" href="{{www_path}}/calendar/events/edit/{{event_id}}">
				<strong>{{formatted_date}}: {{event_location}}</strong> <span class="descriptive spaced fadedtext">@ {{venue_name}}</span></a>
				<div class="more"><div class="toggle"></div><!--toggle-->
					<div class="actions">
						<div class="action-inner">
								<a href="{{www_path}}/calendar/events/edit/{{event_id}}" class="mininav_flush"><div class="icon icon-pencil"></div><!--icon--></i>{{copy_edit_event}}</a>
								<a href="{{www_path}}/calendar/events/delete/{{event_id}}" class="mininav_flush needsconfirmation"><div class="icon icon-ban"></div><!--icon--></i>{{copy_delete_event}}</a>
						</div><!--action-inner-->
					</div><!--actions-->
				</div><!--more-->
			</li>
			{{/events_thisweek}}
		</ul>
	</div><!--pure-->
	{{/events_thisweek}}

<div class="pure-u-1">
	{{#events_allfuture}}
		<div class="material">
			<h5 class="usecolor5">{{copy_upcoming_events}}</h5>
		<ul class="dates">
			{{#events_allfuture}}
			<li>
				<a class="{{#published}}usecolor5{{/published}}" href="{{www_path}}/calendar/events/edit/{{event_id}}"><div class="icon icon-calendar"></div><!--icon--><strong> {{formatted_date}}: {{event_location}}</strong><span class="descriptive spaced fadedtext">@ {{venue_name}}</span> {{#published}}published!{{/published}}</a>
			</li>
			{{/events_allfuture}}
		</ul></div><!--material-->
	{{/events_allfuture}}



	{{^events_allfuture}}
			<div class="empty">
				<p>{{copy_no_upcoming_events}}</p>
			</div>
	{{/events_allfuture}}

	{{#events_allpast}}
		<div class="material">
		<h5>{{copy_archive_events}}</h5>
		<ul class="dates">
			{{#events_allpast}}
				<li><a class="files" href="{{www_path}}/calendar/events/edit/{{event_id}}"><div class="icon icon-calendar"></div><!--icon--><strong> {{formatted_date}}: </strong><span class="descriptive spaced fadedtext">@ {{venue_name}}</span> {{#published}}published!{{/published}}</a>
			</li>
			{{/events_allpast}}
		</ul></div><!--material-->
	{{/events_allpast}}


{{^events_allpast}}
		<div class="empty">
		<p>{{copy_no_archive_events}}</p>
		</div>
{{/events_allpast}}
	</div><!--pure-->
	<div class="pure-u-1">	
	<a class="lightboxed button" href="{{www_path}}/calendar/events/">{{label_submit_button}}</a>
	</div><!--pure-->

