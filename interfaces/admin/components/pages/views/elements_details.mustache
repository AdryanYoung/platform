		<label for="template_id">Choose an embed style:</label>
		<div class="row">
			<div class="six columns">
				<select id="change_template_id" name="change_template_id">
					{{{template_options}}}
				</select>
				<button type="submit">Change style</button>
				{{#custom_template}}
					<a href="{{www_path}}/elements/templates/edit/{{template_id}}/embed/parent/{{id}}" class="button lightboxed">Edit custom embed</a>
