<a href="/admin/commerce/subscriptions">Back to the future</a>

{{#plan}}
    <h2>{{name}}</h2>

<div class="pure-u-1-2">
    <ul>
        <li>{{sku}}</li>
        <li>{{description}}</li>
        <li>{{price}}</li>
        <li>{{interval}}</li>
    </ul>
</div>

<form accept-charset="UTF-8" enctype="multipart/form-data" method="post" action="{{www_path}}/commerce/subscriptions/detail/{{id}}" id="rename_tiers" class="nodefaultajax">
        <input type="hidden" name="action" value="do_change" />
        <input type="hidden" name="id" value="{{id}}">

        <label for="name">Plan name</label>
        <input type="text" id="name" name="name" value="{{name}}" placeholder="Job Name" class="required" />
        <label for="fulfillment_job_description">Description</label>
        <textarea id="fulfillment_job_description" name="fulfillment_job_description">{{description}}</textarea>

    <label for="price">Price</label>
    <input type="text" id="price" name="price" value="{{price}}" placeholder="150" class="required" />


        <div class="pure-u-1">
            <button type="submit">Save</button><a class="button needsconfirmation" href="{{www_path}}/commerce/subscriptions/cancel/{{id}}" type="submit">Cancel</a>
        </div>
    </form>
{{/plan}}